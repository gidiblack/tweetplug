<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head'); -%>
<body>
    <%- include('partials/nav'); -%>
    <main>
        <!-- Login form -->
        <section>
            <div class="container">
                <h1 class="text-center large">Sign in <span class="big">manage your account</span></h1>
                <form action="login" id="loginForm">
                    <fieldset class="form-group first-child">
                        <input type="text" class="form-control" id="username" placeholder="Username" aria-placeholder="Username" required aria-required="true">
                    </fieldset>
                    <fieldset class="form-group">
                        <input type="password" class="form-control" id="loginPassword" placeholder="Password" aria-placeholder="Password" required aria-required="true">
                    </fieldset>
                    <fielset class="form-group form-check last-child">
                        <input type="checkbox" class="form-check-input" id="rememberLogin">
                        <label class="form-check-label" for="rememberLogin">Remember me</label>
                        <a href="forgot-password.html" id="forgotPassword">Forgot Password?</a>
                    </fielset>
                    <button type="submit" class="button">Login</button>
                </form>
                <p class="text-center my-3">Don't have an account?<span class="pl-3"><a href="register.html">Register!</a></span></p>
            </div>
        </section>
    </main>
    <!-- error message modal -->
    <div id="errorModal" class="error-modal">
        <!-- Modal content -->
        <div class="modal-content container">
        <span class="close-modal">&times;</span>
        <p>error: <span id="errorMessage">username or password incorrect</span></p>
        </div>
    </div>
    <%- include('partials/footer'); -%>
</body>
    <%- include('partials/scripts'); -%>
</html>