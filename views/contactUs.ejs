<!DOCTYPE html>
<html lang="en">
     <%- include('partials/head'); -%>
     <title>Tweetplug | Contact us</title>
<body>
     <%- include('partials/nav'); -%>
    <main>
        <section id="contactUs">
            <div class="container">
                <h1 class="text-center mb-4">Contact Us</h1>

                <div class="row py-4">
                    <!-- Office address tabs -->
                    <div class="col-lg-6">
                        <h2 class="text-center mb-3">Head Offices</h2>
                        <!-- Navigation links -->
                        <ul class="nav nav-pills nav-fill" id="address-tabs" role="tablist">
                            <li class="nav-item">
                            <a class="nav-link active" id="lagos-tab" data-toggle="tab" href="#lagos" role="tab" aria-controls="lagos" aria-selected="true">Lagos, Nigeria</a>
                            </li>
                            <li class="nav-item">
                            <a class="nav-link" id="united-states-tab" data-toggle="tab" href="#united-states" role="tab" aria-controls="united-states" aria-selected="false">United States</a>
                            </li>
                        </ul>
                        <!-- Tab Contents -->
                        <div class="tab-content" id="addressTabContents">
                            <div class="tab-pane fade active in show" id="lagos" role="tabpanel" aria-labelledby="lagos-tab">
                                <img src="assets/img/location-pin-icon.png" alt="location-pin-icon">
                                <p>Adenekan Plaza. 3, Omolade Aluko Street Off Ago Palace Way, Lagos, Nigeria.</p>
                                <br>
                                <img src="assets/img/phone-icon.png" alt="phone-icon">
                                <p>+234 704 528 4378 (Available 24/7)</p>
                                <br>
                                <span>Postal code: 100263</span>
                            </div>
                            <div class="tab-pane fade" id="united-states" role="tabpanel" aria-labelledby="united-states-tab">
                                <img src="assets/img/location-pin-icon.png" alt="location-pin-icon">
                                <p>204 Staples Dairy Rd, Carrollton, GA, USA.</p>
                                <br>
                                <img src="assets/img/phone-icon.png" alt="phone-icon">
                                <p>(470) 729‑3795‬  (Available 24/7)</p>
                                <br>
                                <span>Zip Code: 30112</span>
                            </div>
                        </div>
                    </div>
                    <!-- contact form -->
                    <div class="col-lg-6">
                        <h2 class="text-center mb-3">Send us a message</h2>
                        <form action="/contact/admin/support" method="POST" id="contact-message" class="row">
                            <fieldset class="form-group col-md-6">
                                <input type="text" name="name" id="name" class="form-control" placeholder="Name" aria-placeholder="Name" required>
                            </fieldset>
                            <fieldset class="form-group col-md-6">
                                <input type="email" name="email" id="email" class="form-control" placeholder="Email" aria-placeholder="Email" required>
                            </fieldset>
                            <fieldset class="form-group col-md-12">
                                <textarea name="message" id="message" class="form-control" rows="8" placeholder="Message" aria-placeholder="Message"></textarea>
                            </fieldset>
                            <button type="submit">Send</button>
                        </form>
                    </div>
                </div>

            </div>
        </section>
    </main>
     <%- include('partials/footer'); -%>
</body>
     <%- include('partials/scripts'); -%>
</html>